  "paths": {
    "/admin/permissions/{userId}": {
      "put": {
        "summary": "更新用户权限和身份",
        "description": "更新用户权限和身份",
        "tags": ["Admin"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "role": {
                    "type": "string",
                    "description": "可选：用户身份"
                  },
                  "addPermissions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "添加权限列表"
                  },
                  "removePermissions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "移除权限列表"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Permissions updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "role": {
                          "type": "string"
                        },
                        "permissions": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },

    "/users/visitor-login": {
