                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    },
                    "refreshToken": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "account": {
                          "type": "string"
                        },
                        "role": {
                          "type": "string"
                        },
                        "profile": {
                          "type": "object",
